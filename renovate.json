{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
      "config:recommended"
  ],
  "kubernetes": {
    "fileMatch": [
      "k8s/.+\\.yaml$",
      "kustomize/base"
    ]
  },
  "packageRules": [
    {
      "matchFileNames": ["devbox.json", "devbox-ci.json"],
      "automerge": true,
      "commitMessagePrefix": "[skip ci] "
    }
  ]
}
